      <Label fx:id="status" alignment="CENTER" layoutX="14.0" layoutY="155.0" prefHeight="18.0" prefWidth="190.0" />
      <Button fx:id="deleteButton" layoutX="220.0" layoutY="151.0" mnemonicParsing="false" onAction="#onDelete" prefHeight="26.0" prefWidth="62.0" style="-fx-font-weight: bold;" text="DELETE">
