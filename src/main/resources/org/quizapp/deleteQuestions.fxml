<AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #0267C1;" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.quizapp.admin.DeleteQuestionsController">
   <children>
      <Pane prefHeight="44.0" prefWidth="300.0" style="-fx-background-color: #D64045;">
         <children>
            <Label layoutX="8.0" layoutY="5.0" prefHeight="35.0" prefWidth="184.0" style="-fx-font-weight: bold;" text="Delete questions">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="returnButton" layoutX="217.0" layoutY="10.0" mnemonicParsing="false" onAction="#onReturn" style="-fx-font-weight: bold;" text="GO BACK">
